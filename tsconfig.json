{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@/*": ["src/*"],
      "#/*": ["types/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "strictNullChecks": false,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "components.d.ts",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "types/**.ts",
  ],
  "exclude": ["node_modules", "dist", "**/*.js"]
}